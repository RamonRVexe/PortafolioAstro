
<header class="lg:px-16 px-4 sticky top-0 rounded-none shadow-md h-max bg-opacity-80 backdrop-blur-2xl backdrop-saturate-200 flex flex-wrap items-center justify-center py-2 w-full z-10">
    <label for="menu-toggle" class="pointer-cursor md:hidden block">
        <svg class="fill-current text-white" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20">
            <title>menu</title>
            <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
        </svg>
    </label>

    <input class="hidden" type="checkbox" id="menu-toggle" />

    <div class="hidden md:flex md:items-center md:w-auto w-full" id="menu">
        <nav>
            <ul class="md:flex items-center justify-center text-base text-white pt-2 md:pt-0">
                <li><a class="md:p-2 py-1 px-0 block" href="#top">Inicio</a></li>
                <li><a class="md:p-2 py-1 px-0 block" href="#about">Sobre mi</a></li>
                <li><a class="md:p-2 py-1 px-0 block" href="#experiencia">Experiencia</a></li>
                <li><a class="md:p-2 py-1 px-0 block md:mb-0 mb-1" href="#proyectos">Proyectos</a></li>
                <li><a class="md:p-2 py-1 px-0 block md:mb-0 mb-1" href="#contacto">Contacto</a></li>

            </ul>
        </nav>
    </div>
</header>

<script>
    const menuToggle = document.getElementById('menu-toggle');
    if (menuToggle !== null) {
        menuToggle.addEventListener('change', function() {
            const menu = document.getElementById('menu');
            if (menu !== null) { 
                if (this.checked) {
                    menu.classList.remove('hidden');
                } else {
                    menu.classList.add('hidden');
                }
            }
        });
    }
</script>
